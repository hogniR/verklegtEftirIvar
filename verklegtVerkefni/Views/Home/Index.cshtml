@{
    ViewBag.Title = "Home Page";
}
<!--forsida-->
@Html.ActionLink("Nýskráning", "register", "user")
<html lang="is">
<head>
    <title>textit</title>
    <link rel="stylesheet" type="text/css" href="~/Content/main.css" />
</head>
<body>
    <div id="header">
        <div id="logo">
            <a href="#"><img src="~/images/logo.jpg"></a>
        </div>
        <div id="navigation">
            <a href="#" id="index">@Html.ActionLink("Forsíða", "Index", "Home")</a> | <a href="#">@Html.ActionLink("Beiðnir", "listOfRequests", "requests")</a> |
            <a href="#">Leidbeiningar</a> | <a href="#">Hafa samband </a>
        </div>
    </div>
    <div id="logIn">
        <select name="LogIn">
            <option value="userName">BubblePrincess</option>
            <option value="profile">Profile</option>
            <option value="logOut">Skra ut</option>
        </select>
    </div>
    <!--<div class="mainContent">-->
    <div class="middle">
        <table id="requestTable">
            <thead>
                <tr>
                    <th>Stada</th>
                    <th>Beidnir</th>
                    <th>Likes</th>
                    <th>Dagsetning</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model)
                {
                    <tr>
                        <td>
                            <select name="statusOnRequest">
                                <option value="unfinished">olokid</option>
                                <option value="inProgress">I vinnslu</option>
                                <option value="finished">Lokid</option>
                            </select>
                        </td>
                        <td>
                            <div id="request">@Html.ActionLink(request.name, "viewRequest", new { id = request.id })</div>
                        </td>
                        <td>
                            @request.likes
                        </td>
                        <td>
                            @request.dateOfPost
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div id="sendRequest">@Html.ActionLink("Senda inn beiðni", "newRequest", "requests")</div> <!--laga!!!!!-->

        <div id="prevNextButtons">
            <p id="prevButton"><a href="#">Fyrri sida</a><p>
            <p id="nextButton"><a href="#">Naesta sida</a><p>
        </div>
    </div> <!--loka middle-->
    <div class="left">
        <div class="popular">
            <h4> Vinsaelast </h4>
            <ul id="listOfPopular">
                <li><a href="#">Textaskra 1</a></li>
                <li><a href="#">Textaskra 2</a></li>
                <li><a href="#">Textaskra 3</a></li>
                <li><a href="#">Textaskra 4</a></li>
                <li><a href="#">Textaskra 5</a></li>
                <li id="seeMorePopular"><a href="#">Sja meira</a></li>
            </ul>
        </div>

        <div class="newContent">
            <h4> Nyjasta efni </h4>
            <ul id="listOfNewContent">
                <li><a href="#">Textaskra 1</a></li>
                <li><a href="#">Textaskra 2</a></li>
                <li><a href="#">Textaskra 3</a></li>
                <li><a href="#">Textaskra 4</a></li>
                <li><a href="#">Textaskra 5</a></li>
                <li id="seeMoreNewContent"><a href="#">Sja meira</a></li>
            </ul>
        </div>
    </div><!--loka left-->
    <div class="right">
        <div id="Ads">
            <div id="Ad1">
                <p> Auglysing 1 </p>
            </div>
            <div id="Ad2">
                <p> Auglysing 2 </p>
            </div>
            <div id="Ad3">
                <p> Auglysing 3 </p>
            </div>
        </div>
    </div> <!--loka right-->
    <!--</div> loka main content-->
</body>
</html>