@model IEnumerable<verklegtVerkefni.Models.files>

@{
    ViewBag.Title = "listOfPopular";
}
<!--Listi af skrám-->
<!DOCTYPE html>
<html lang="is">
<head>
    <title>textit</title>
    <link rel="stylesheet" type="text/css" href="~/Content/main.css" media="screen, projection" />
    <script src="JavaScript.js" type="text/javascript"></script>
</head>
<body>
    <div class="middleFiles">
        <table id="filesTable">
            <thead>
                <tr>
                    <th>Nafn</th>
                    <th>Sería</th>
                    <th>Þáttur</th>
                    <th>Likes</th>
                    <th>Dagsetning</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var file in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(file.name + " (" + file.language + ")", "downloadFile", new { id = file.id })
                            
                            @if (file.deaf == true)
                            {
                                <img src="~/images/deaf.jpg" />
                            }
                        </td>
                        @if(file.series < 1 && file.episode < 1)
                        {
                            <td>
                                
                            </td>
                            <td>
                                
                            </td>
                        }
                        else
                        {
                            <td>
                                @file.series
                            </td>
                            <td>
                                @file.episode
                            </td>   
                        }
                        <td>
                            @file.likes
                        </td>
                        <td>
                            @file.dateOfPost
                        </td>
                    </tr>
                }                
            </tbody>
        </table>

    </div>
</body>
</html>