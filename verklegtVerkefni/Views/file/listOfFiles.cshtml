@model IEnumerable<verklegtVerkefni.Models.files>

@{
    ViewBag.Title = "listOfFiles";
}
<!--Listi af skrám-->
<!DOCTYPE html>
<html lang="is">
<head>
    <title>textit</title>
    <link rel="stylesheet" type="text/css" href="~/Content/main.css" media="screen, projection" />
    <script src="JavaScript.js" type="text/javascript"></script>
</head>
<body>
    <div class="middleFiles">
        <table id="filesTable">
            <thead>
                <tr>
                    <th>Nafn</th>
                    <th>Sería</th>
                    <th>Þáttur</th>
                    <th>Likes</th>
                    <th>Dagsetning</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var files in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(files.name + " (" + files.language + ")", "downloadFile", new { id = files.id })
                            
                            @if (files.deaf == true)
                            {
                                <img src="~/images/deaf.jpg" />
                            }
                        </td>
                        @if (files.series < 1 && files.episode < 1)
                        {
                            <td></td>
                            <td></td>
                        }
                        else
                        {
                            <td>
                                @files.series
                            </td>
                            <td>
                                @files.episode
                            </td>
                        }
                        <td id="totalLikes_@files.id">
                            @files.likes<p id="like_@files.id"><a href="#" onclick="addLike(@files.id)" id="likeButton_@files.id">Like</a></p>
                        </td>
                        <td>
                            @files.dateOfPost
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <script type="text/javascript">
            function addLike(id) {
                $.ajax({
                    type: "POST",
                    url: "addLike",
                    data: { 'id': id },
                    success: function (data) {
                        $('#likeButton_' + id).hide();
                        $('#totalLikes_' + id).replaceWith(data);
                    }
                })
            }
        </script>
    </div>
</body>
</html>
