@model IEnumerable<verklegtVerkefni.Models.Requests>

@{
    ViewBag.Title = "listOfRequests";
}
<!--Listi af beiðnum-->
<!DOCTYPE html>
<html lang="is">
<head>
    <title>textit</title>
    <link rel="stylesheet" type="text/css" href="~/Content/main.css" media="screen, projection" />
    <script src="JavaScript.js" type="text/javascript"></script>
</head>
<body>
        <div class="middleRequest">
             <h2>Beiðnir</h2>
                <table id="requestTable">
                    <thead>
                        <tr>
                            <th>Stada</th>
                            <th>Beidnir</th>
                            <th>Likes</th>
                            <th>Dagsetning</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model)
                        {
                            <tr>
                                <td>
                                    <select name="statusOnRequest">
                                        <option value="unfinished">Olokid</option>
                                        <option value="inProgress">I vinnslu</option>
                                        <option value="finished">Lokid</option>
                                    </select>
                                </td>
                                <td>
                                    <div id="request">@Html.ActionLink(request.name, "viewRequest", new { id = request.id })</div>
                                </td>
                                <td>
                                    @request.likes
                                </td>
                                <td>
                                    @request.dateOfPost
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            <p class="newRequestLink">
                @Html.ActionLink("Senda inn beiðni", "newRequest", "requests")
            </p>
            </div> <!--middle content lokast-->
</body>
</html>        