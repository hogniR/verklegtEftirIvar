@model verklegtVerkefni.Models.Requests

@{
    ViewBag.Title = "newRequests";
}
<!DOCTYPE html>
    <html lang="is">
    <head>
        <title>textit</title>
        <link rel="stylesheet" type="text/css" href="~/Content/main.css" media="screen, projection" />
    </head>
    <body>
        @using(Html.BeginForm("newRequest", "requests", FormMethod.Post))
        { 
        <div class="middleNewRequest">
            <h2>Senda inn nýja beiðni</h2>
            @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(model => model.name, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.name)
                        @Html.ValidationMessageFor(model => model.name)
                    </div>
                </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.comment, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.comment)
                            @Html.ValidationMessageFor(model => model.comment)
                        </div>
                    </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.language, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <label>@Html.RadioButtonFor(model => model.language, "Íslenska", new { @checked = true })Íslenska</label>
                        <label>@Html.RadioButtonFor(model => model.language, "Enska", new { @checked = true })Enska</label>
                    </div>
                </div>
            <div class="form-group">
                @Html.LabelFor(model => model.deaf, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.CheckBoxFor(model => model.deaf, new { @checked = "checked" })
                </div>
            </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Skrá" class="btn btn-default" />
                    </div>
                </div>
            <div class="backNewRequest">
                @Html.ActionLink("Til baka", "listOfRequests", "requests")
            </div>
        </div>
        }
    </body>
</html>